@model IEnumerable < Microsoft.AspNet.Identity.EntityFramework.IdentityRole >   
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Add user", "Add", new { id = item.Name })
            </td>
            <td>
                @Html.ActionLink("Remove user", "Remove", new { id = item.Name })
            </td>
            <td>
                @Html.ActionLink("Delete role", "Delete", new { id = item.Name })
            </td>
        </tr>
    }

</table>